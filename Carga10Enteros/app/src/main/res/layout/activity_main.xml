<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INGRESE 10 VALORES ENTEROS"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layIzq"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <EditText
            android:id="@+id/edtN1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned|number"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtN2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned|number"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/edtN1"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/edtN3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned|number"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/edtN2"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/edtN4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned|number"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/edtN3"
            tools:layout_editor_absoluteX="0dp" />

        <EditText
            android:id="@+id/edtN5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned|number"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/edtN4"
            tools:layout_editor_absoluteX="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layDer"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <EditText
            android:id="@+id/edtN6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned|number"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtN7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned|number"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtN8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned|number"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtN9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned|number"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtN10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0"
            android:inputType="numberSigned|number"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/txvNegativos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valores negativos"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvPositivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valores positivos"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvMultiplos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Multiplos de 15"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvPares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Acumulado pares"
            android:textColor="#0000FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAnalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Analizar"
            android:text="ANALIZAR"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="No deje campos vacios"
        android:textColor="#FF0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layResultado" />

</androidx.constraintlayout.widget.ConstraintLayout>